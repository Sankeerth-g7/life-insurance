<mvc:View controllerName="myapp.controller.Admin"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout">

    <Page showHeader="false" class="adminBackground" enableScrolling="false">
        <VBox class="adminLayout" width="100%" height="100%">
            
            <!-- Navbar -->
            <VBox id="navbarAdminContainer" height="10%" />

            <!-- Image Section -->
            <VBox id="middleImageContainer" height="80%" width="100%">
                <Image src="images/I028.png" width="100%" height="100%" alt="Admin Middle Image" />
            </VBox>

            <!-- Footer -->
            <VBox id="FooterAdminContainer" class="footer" height="10%" />
        </VBox>
    </Page>
</mvc:View>
