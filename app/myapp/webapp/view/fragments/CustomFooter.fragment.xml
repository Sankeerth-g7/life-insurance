<core:FragmentDefinition 
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout">
    <VBox class="footerContainer">
    <HBox justifyContent="Center" class="footerLinksBox">
        <HBox justifyContent="SpaceAround" width="80%" class="footerLinks">
        <Link text="About Us" class="footerLink" press=".onAboutUsPress" />
        <Link text="Contact Us" class="footerLink" press=".onContactUsPress"/>
        <Link text="Terms  Conditions" class="footerLink" press=".onTermsPress"/>
        <Link text="Privacy Policy" class="footerLink" press=".onPrivacyPress"/>
        <Link text="FAQ" class="footerLink" press=".onFaqPress"/>
        </HBox>
    </HBox>
    
    <HBox justifyContent="Center" class="footerCopyrightBox">
        <Text id="footerText" class="footerCopyright"/>
        </HBox>

    </VBox>
</core:FragmentDefinition>

