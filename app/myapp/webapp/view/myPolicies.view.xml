<mvc:View controllerName="myapp.controller.myPolicies"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page title="User Policies">
    
<VBox id="navbarMyPoliciesContainer "/>

        <content>
        <Text text="{policyModel}" />
            <List id="applicationList" headerText="Policies" items="{policyModel>/userPolicies}">
                <items>
                    <ObjectListItem 
                        title="{applicantName}" 
                        number="{applicationId}" 
                        numberUnit="Application ID"
                        icon="sap-icon://person-placeholder">
                        
                        <attributes>
                            <ObjectAttribute title="Aadhar" text="{applicantAadhar}" />
                            <ObjectAttribute title="Address" text="{applicantAddress}" />
                            <ObjectAttribute title="Age" text="{applicantAge}" />
                            <ObjectAttribute title="Email" text="{applicantEmail}" />
                            <ObjectAttribute title="Mobile" text="{applicantMobileNo}" />
                            <ObjectAttribute title="Occupation" text="{applicantOccupation}" />
                            <ObjectAttribute title="Application Date" text="{applicationDate}" />
                            <ObjectAttribute title="Document Type" text="{documentType}" />
                            <ObjectAttribute title="Status" text="{status}" />
                        </attributes>

                        <firstStatus>
                            <ObjectStatus title="Policy Name" text="{policyDetails/policyName}" state="Success"/>
                        </firstStatus>
                        <secondStatus>
                            <ObjectStatus title="Policy Type" text="{policyDetails/policyType}" state="None"/>
                        </secondStatus>

                        <attributes>
                            <ObjectAttribute title="Coverage Amount" text="{policyDetails/coverageAmount}" />
                            <ObjectAttribute title="Premium Amount" text="{policyDetails/premiumAmount}" />
                            <ObjectAttribute title="Policy Description" text="{policyDetails/policyDescription}" />
                            <ObjectAttribute title="Policy Start Date" text="{policyDetails/startDate}" />
                            <ObjectAttribute title="Policy Term Length" text="{policyDetails/termLength}" />
                        </attributes>
                    </ObjectListItem>
                </items>
            </List>
        </content>
    </Page>
</mvc:View>
