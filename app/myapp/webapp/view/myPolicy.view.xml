<mvc:View 
    controllerName="myapp.controller.myPolicy"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Page showHeader="false" class="">
        <VBox id="navbarMyPolicyContainer"/>

        <FlexBox
            class="sapUiMediumMargin customCardList"
            direction="Row"
            wrap="Wrap"
            justifyContent="Start"
            items="{policyModel>/userPolicies}"
        >
            <items>
                <VBox class="policyCard" backgroundDesign="Solid" width="400px">
                    <HBox alignItems="Center" class="cardHeader">
                        <!-- <Icon src="sap-icon://person-placeholder" size="2rem" /> -->
                        <Title text="{policyModel>applicantName}" level="H3" class="cardTitle" />
                    </HBox>

                    <Text text="App ID: {policyModel>applicationId}" class="highlightText" />
                    <Text text="Email: {policyModel>applicantEmail}" class="highlightText" />
                    <Text text="Mobile: {policyModel>applicantMobileNo}" class="highlightText" />
                    <Text text="Policy: {policyModel>policyDetails/policyName}" class="highlightText" />
                    <Text text="Coverage: ₹{policyModel>policyDetails/coverageAmount}" class="highlightText" />
                    <Text text="Premium: ₹{policyModel>policyDetails/premiumAmount}" class="highlightText" />
                    <ObjectStatus text="{policyModel>status}" class="statusIndicator" />
                </VBox>
            </items>
        </FlexBox>

        <VBox id="FooterMyPoliciesContainer"/>
    </Page>
</mvc:View>
