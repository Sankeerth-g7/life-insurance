<mvc:View
    controllerName="myapp.controller.myProfile"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:unified="sap.ui.unified"
    xmlns:f="sap.ui.layout.form"
    >
    <Page id="LApage" showHeader="true" enableScrolling="true" class="customPage1">
    <VBox id="navbarmyProfileContainer"/>
    
     
   
    <content>
    <Bar>
    <contentMiddle >
    <Text text="Application Form"  class="subHeader1" />
    </contentMiddle>
    </Bar>
    </content>
   
     
        <content>
 
            <f:SimpleForm class="center">
            <FlexBox
                id="LAflexbox"
                direction="Row"
                justifyContent="SpaceBetween"
                fitContainer="true"
                class="sapUiSmallMargin1">
               
            <VBox class="formContainer1" width="60%">
                <VBox class="customMargin1">
                <HBox  alignItems="Center">
                    <Label id="LAlabel1" text="Enter Applicant Name" required="true"  class="customLabel1"/>
                    <Input id="enterApplicantName" placeholder="Enter Applicant Name"  liveChange=".nameValidation" class="customInput1" />
                </HBox>
                </VBox>
 
                <VBox class="customMargin1">
                <HBox alignItems="Center">
                    <Label id="LAlabel2" text="Enter Applicant Address" required="true" class="customLabel1" />
                    <Input id="enterApplicantAddress" placeholder="Enter Applicant Address"  class="customInput1"  />
                </HBox>
                </VBox>
 
 
                <VBox class="customMargin1">
                <HBox alignItems="Center">
                    <Label id="LAlabel3" text="Enter Applicant Mobile No"  required="true" class="customLabel1"/>
                    <Input id="enterApplicantMobileNo" placeholder="Enter Applicant Mobile No" liveChange="numValidation" class="customInput1"/>
                </HBox>
                </VBox>
 
                <VBox class="customMargin1">
                <HBox alignItems="Center">
                    <Label id="LAlabel4" text="Enter Applicant Email Id" required="true" class="customLabel1"/>
                    <Input id="enterEmailId" placeholder="Enter Applicant Email Id" liveChange="emailValidation" class="customInput1"/>
                    </HBox>
                </VBox>
 
               <VBox class="customMargin1" id="LAbox3">
                <VBox class="customMargin1">
                <HBox alignItems="Center">
                    <Label text="Upload Documents" required="true" class="customLabel1" />
                    <ComboBox id="selectDocumentType" width="100%" placeholder="Select Document Type" class="customInput1" >
                    <items>
                    <core:ListItem text="JPEG" />
                    <core:ListItem text="JPG" />
                    <core:ListItem text="PDF" />
                    </items>                  
                    </ComboBox>
                </HBox>
                </VBox>
                <HBox alignItems="Center" >
                    <Label text="Images or Documents (Upload below 2mb)" required="true" class="documentLabel1"/>
                   
                    <VBox >
                    <Button id="chooseFileButton" text="Choose a file..." width="100%" class="customButton1" press=".onChooseFile"/>
                    <Input id="filePath" visible="true" editable="false" />
                   
                    <Button id="uploadDocumentsButton" text="Upload Documents" type="Accept"  width="100%" class="customButton1" press=".onUpload"/>
                    <Input id="insuranceId" visible="false" />
 
                    </VBox>
                </HBox>
                </VBox>
                

                </VBox>
                <VBox id="LAbox2" class="formContainer1"  width="48%">
               <VBox class="customMargin1">
                <HBox alignItems="Center">
                    <Label id="LAlabel5" text="Enter Aadhaar No" required="true" class="customLabel1" />
                    <Input id="enterAadhaarNo" placeholder="Enter Aadhaar No" liveChange="aadhaarValidation"  class="customInput1" />
                </HBox>
                </VBox>
                <VBox class="customMargin1">
                <HBox alignItems="Center">
                    <Label id="LAlabel6" text="Enter Pan No" required="true" class="customLabel1" />
                    <Input id="enterPanNo" placeholder="Enter Pan No" liveChange="panValidation"  class="customInput1" />
                </HBox>
                </VBox>
               
 
               
                <VBox class="customMargin1">
                <HBox alignItems="Center">
                    <Label id="LAlabel7" text="Enter the Applicant Age" required="true" class="customLabel1"/>
                    <Input id="entertheapplicantage" placeholder="Enter the Applicant Age"  class="customInput1"/>
                </HBox>
                </VBox>
 
                <VBox class="customMargin1">
                <HBox alignItems="Center">
                    <Label id="LAlabel8" text="Application Id" required="true" class="customLabel1"/>
                    <Input id="applicationid" placeholder="Applicant ongoing id"   class="customInput1"/>
                </HBox>
                </VBox>
 
                </VBox>
 
               
                </FlexBox>
               
            </f:SimpleForm>
           
        </content>
            <Toolbar id="LAtoolbar" class="sapUiSmallMargin1">
                <ToolbarSpacer id="LAtoolbarspacer" />
                <Button id="LAbutton1" text="Submit" press="onSubmit" type="Emphasized" width="10%" class="customButton1" />
                <Button id="LAbutton2" text="Clear" press="onClear" type="Reject" width="10%" class="customButton1" />
                <ToolbarSpacer id="LAtoolbarspacer1" />
            </Toolbar>
        <VBox id="FooterProfileContainer"/>
    </Page>
</mvc:View>