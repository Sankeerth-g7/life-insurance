<mvc:View controllerName="myapp.controller.user"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Page showHeader="false" >
    <VBox id="navbaruserContainer"/>
        <content>
            <VBox class="userProfilePage">
                <!-- Profile Card -->
                <VBox class="userProfileCard">
                    <HBox class="userProfileHeader" alignItems="Center">
                        <Avatar src="https://via.placeholder.com/150" displayShape="Circle" size="XL" />
                        <VBox class="userProfileInfo">
    <HBox>
        <Label text="Username:" width="150px" />
        <Text text="{= ${userModel2>userDetails/username} ? ${userModel2>userDetails/username} : 'john_doe'}" />
    </HBox>
    <HBox>
        <Label text="Email:" width="150px" />
        <Text text="{= ${userModel2>userDetails/email} ? ${userModel2>userDetails/email} : 'john.doe@email.com'}" />
    </HBox>
    <HBox>
        <Label text="Phone:" width="150px" />
        <Text text="{= ${userModel2>userDetails/phone} ? ${userModel2>userDetails/phone} : '9876543210'}" />
    </HBox>
    <HBox>
        <Label text="Role:" width="150px" />
        <Text text="{= ${userModel2>userDetails/role} ? ${userModel2>userDetails/role} : 'Admin'}" />
    </HBox>
    <HBox>
        <Label text="Status:" width="150px" />
        <Text text="{= ${userModel2>userDetails/status} === 'Active' ? 'Active' : 'Inactive'}" />
    </HBox>
</VBox>

                    </HBox>
                </VBox>

                <!-- Change Password Card -->
                <VBox class="userPasswordCard">
                    <Text text="Change Password" class="userPasswordTitle" />
                    <Input placeholder="Current Password" type="Password" class="userPasswordInput" id="currentPasswordInput" />
                    <Input placeholder="New Password" type="Password" class="userPasswordInput" id="newPasswordInput"/>
                    <Input placeholder="Confirm New Password" type="Password" class="userPasswordInput" id="confirmPasswordInput" />
                    <Button text="Update Password" type="Emphasized" class="userPasswordButton" press="onChangePassword" />
                </VBox>
            </VBox>
        </content>
    </Page>
</mvc:View>
