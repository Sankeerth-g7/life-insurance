<mvc:View controllerName="myapp.controller.viewPolicy"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Page title="Available Life Insurance Policies" showNavButton="false">
       
<VBox
 class="policyCard"
items="{policyModel>/Policies}">
 <Title text="{policyModel>policyName}" level="H3" />
 <Text text="Type: {policyModel>policyType}" />
 <Text text="Term Length: {policyModel>termLength} years" />
 <Text text="Premium: ₹{policyModel>premiumAmount}" />
 <Text text="Coverage: ₹{policyModel>coverageAmount}" />
 <Text text="Description: {policyModel>policyDescription}" />
 <Button text="Select Plan" type="Emphasized" press="onSelectPlan" />
 </VBox>      
    </Page>
</mvc:View>
