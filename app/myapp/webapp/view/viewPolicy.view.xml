<mvc:View controllerName="myapp.controller.viewPolicy"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Page title="Available Life Insurance Policies">
        <FlexBox
            class="sapUiMediumMargin"
            direction="Row"
            wrap="Wrap"
            justifyContent="Center"
            items="{policyModel>/Policies}">

            <items>
                <VBox class="policyCard" backgroundDesign="Solid" width="300px">
                
                    <HBox alignItems="Center" class="cardHeader">                     
                        <Image src="{path: 'policyModel>policyType', formatter: '.formatter.getPolicyIcon'}" width="40px" height="40px" />
                        <Title text="{policyModel>policyName}" level="H3" class="cardTitle" />
                    </HBox>
                    <Text text="Type: {policyModel>policyType}" />
                    <Text text="Term Length: {policyModel>termLength} years" />
                    <Text text="Premium: ₹{policyModel>premiumAmount}" />
                    <Text text="Coverage: ₹{policyModel>coverageAmount}" />
                    <Text text="Description: {policyModel>policyDescription}" />
                    <Button text="Select Plan" type="Emphasized" press="onSelectPlan" />
                </VBox>
            </items>
        </FlexBox>
    </Page>
</mvc:View>
